@page "/muddemo"
@rendermode InteractiveServer

<PageTitle>MudBlazor Demo</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">MudBlazor Integration Demo</MudText>
<MudText Class="mb-8">This page demonstrates that MudBlazor is successfully integrated into MyMoneySaver.</MudText>

<MudPaper Class="pa-4 mb-4">
    <MudText Typo="Typo.h5" GutterBottom="true">Buttons</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary">Primary</MudButton>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary">Secondary</MudButton>
    <MudButton Variant="Variant.Outlined" Color="Color.Success">Success</MudButton>
    <MudButton Variant="Variant.Text" Color="Color.Info">Info</MudButton>
</MudPaper>

<MudPaper Class="pa-4 mb-4">
    <MudText Typo="Typo.h5" GutterBottom="true">Text Field</MudText>
    <MudTextField @bind-Value="textValue" Label="Enter Text" Variant="Variant.Outlined"></MudTextField>
    <MudText Class="mt-2">You typed: @textValue</MudText>
</MudPaper>

<MudPaper Class="pa-4 mb-4">
    <MudText Typo="Typo.h5" GutterBottom="true">Cards</MudText>
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Expense Card Example</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText>This is what expense cards could look like in MyMoneySaver.</MudText>
            <MudText Typo="Typo.body2">Amount: $49.99</MudText>
            <MudText Typo="Typo.body2">Category: Groceries</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Edit</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Error">Delete</MudButton>
        </MudCardActions>
    </MudCard>
</MudPaper>

<MudPaper Class="pa-4 mb-4">
    <MudText Typo="Typo.h5" GutterBottom="true">Alerts</MudText>
    <MudAlert Severity="Severity.Success">Budget goal achieved!</MudAlert>
    <MudAlert Severity="Severity.Warning" Class="mt-2">Approaching budget limit</MudAlert>
    <MudAlert Severity="Severity.Error" Class="mt-2">Budget exceeded</MudAlert>
    <MudAlert Severity="Severity.Info" Class="mt-2">New expense added</MudAlert>
</MudPaper>

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h5" GutterBottom="true">Snackbar Demo</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowSnackbar">Show Notification</MudButton>
</MudPaper>

@code {
    private string textValue = "";

    [Inject]
    private ISnackbar? Snackbar { get; set; }

    private void ShowSnackbar()
    {
        Snackbar?.Add("MudBlazor is working perfectly!", Severity.Success);
    }
}
