@* Interactive shell component that wraps the entire layout *@
@rendermode InteractiveServer

<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   OnClick="@ToggleDrawer" />
    <MudText Typo="Typo.h6">MyMoneySaver</MudText>
    <MudSpacer />
</MudAppBar>

<MudDrawer @bind-Open="@_open" Elevation="1">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6" Color="Color.Primary">MyMoneySaver</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
            Home
        </MudNavLink>
        <MudNavLink Href="/transactions" Icon="@Icons.Material.Filled.AccountBalanceWallet">
            Transactions
        </MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    private bool _open = true;

    private void ToggleDrawer()
    {
        _open = !_open;
        Console.WriteLine($"Drawer toggled: {_open}");
    }
}
